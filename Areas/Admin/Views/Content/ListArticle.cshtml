@model IEnumerable<RockFord.DataLayer.Entities.Contents.Article>

@{
    ViewData["title"] = "لیست مقالات";
}



<div class="col-lg-12 col-md-6">
        <div class="well with-header with-footer">
            <div class="header bg-palegreen">
               لیست مقالات
            </div>
            <table class="table table-hover table-striped table-bordered">
                <thead class="bordered-blueberry">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            عنوان
                        </th>
                        <th>
                            سر تیتر
                        </th>
                        <th>
                            تاریخ ایجاد
                        </th>
                        <th>
                            آخرین ویرایش
                        </th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var ar in Model)
                   {
                       <tr>
                           <td>
                               @ar.Id
                           </td>
                           <td>
                               @ar.MainTitle
                           </td>
                           <td>
                               @ar.Header
                           </td>
                           <td>
                               @ar.CreateDate
                           </td>
                           <td>
                               @ar.CreateDate
                           </td>
                       </tr>
                   }
                </tbody>
            </table>

            <div class="footer">
               
            </div>
        </div>
    </div>