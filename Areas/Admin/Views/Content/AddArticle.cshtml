@using RockFord.DataLayer.Entities.Contents
@using System.Text
@model RockFord.DataLayer.DTOs.Content.ArticleViewModel
@{
    ViewData["Title"] = "افزودن مقاله";
}


<div class="col-lg-12">
    <div class="widget">
        <div class="widget-header bordered-top bordered-palegreen">
            <span class="widget-caption">افزودن مقاله جدید</span>
        </div>
        <div class="widget-body">
            <div class="collapse in">
                <form role="form" asp-area="Admin" asp-controller="Content" asp-action="AddArticle" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>عنوان</label>
                        <input type="text" asp-for="Header" class="form-control " placeholder="عنوان مورد نظر خد را در اینجا بنویسید">
                        <span asp-validation-for="Header"></span>
                    </div>
                    <div class="form-group">
                        <label for="definpu">سر مقاله</label>
                        <input type="text" asp-for="MainTitle" class="form-control " id="definpu" placeholder="تیتر مورد نظر خد را در اینجا بنویسید">
                        <span asp-validation-for="MainTitle"></span>
                    </div>
                    <div class="form-group">
                        <label for="definpu">مقدمه</label>
                        <input type="text" asp-for="Description" class="form-control " id="definpu" placeholder="تیتر مقاله را در اینجا بنویسید">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label for="definpu">مقاله</label>
                        <textarea type="text" asp-for="Text" class="form-control" rows="20" id="definpu" ckeditor="1" placeholder="متن مقاله را در اینجا بنویسید"></textarea>
                        <span asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                        @await Component.InvokeAsync("MainGroup")
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-azure btn-file">
                                    Browse <input type="file" name="image">
                                </span>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success">ثبت</button>
                </form>

            </div>
        </div>
    </div>
</div>