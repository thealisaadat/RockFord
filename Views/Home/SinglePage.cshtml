                    <a href="#">#آموزش</a>
                    <a href="#">#نصب</a>
                </div>
                <!-- comment section start -->
                <partial name="_CommentArea" />
                <!-- comment section end -->
            </section>
            <!-- sidebar section start -->
            <partial name="_SinglePageSide" />
            <!-- sidebar section end -->
        </div>
    </div>
</main>