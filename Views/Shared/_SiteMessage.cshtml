@if (
   TempData["SuccessMessage"] != null ||
   TempData["ErrorMessage"] != null ||
   TempData["InfoMessage"] != null ||
   TempData["WarningMessage"] != null
   )
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                window.ShowMessage('  موفقیت ', '@TempData["SuccessMessage"]', 'success');
            });
        </script>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                window.ShowMessage('خطا', '@TempData["ErrorMessage"]', 'error');
            });
        </script>
    }

    if (TempData["WarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                window.ShowMessage('هشدار', '@TempData["WarningMessage"]', 'warning');
            });
        </script>
    }

    if (TempData["InfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                window.ShowMessage(' اطلاعیه', '@TempData["InfoMessage"]', 'info');
            });
        </script>
    }
}